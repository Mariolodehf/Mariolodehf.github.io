<!DOCTYPE html>
<html lang="es" class="no-js" data-theme="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{% if title %}{{ title }} | Blog | Mario De Hoyos F{% else %}Blog | Mario De Hoyos F{% endif %}</title>
  <meta name="description" content="{% if summary %}{{ summary | safe }}{% else %}ArtÃ­culos y experiencias de Mario De Hoyos F en telecomunicaciones y ciberseguridad.{% endif %}" />
  <link rel="canonical" href="https://mariolodehf.github.io/blog{{ page.url }}" />
  <meta name="color-scheme" content="dark light" />
  <link rel="stylesheet" href="/css/styles.css" />
  <script>(function(){try{const t=localStorage.getItem('theme');if(t)document.documentElement.setAttribute('data-theme',t);}catch(e){}})();</script>
  {# Open Graph & JSON-LD solo para posts con front matter #}
  {% if '/posts/' in page.filePathStem %}
    {% set ogTitle = title + ' | Blog | Mario De Hoyos F' %}
    {% set ogDesc = summary or site.description %}
    {% if cover %}<meta property="og:image" content="https://mariolodehf.github.io{{ cover }}" />{% endif %}
    <meta property="og:type" content="article" />
    <meta property="og:title" content="{{ ogTitle }}" />
    <meta property="og:description" content="{{ ogDesc }}" />
  <meta property="og:url" content="https://mariolodehf.github.io/blog{{ page.url }}" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{{ ogTitle }}" />
    <meta name="twitter:description" content="{{ ogDesc }}" />
    {% if cover %}<meta name="twitter:image" content="https://mariolodehf.github.io{{ cover }}" />{% endif %}
    <script type="application/ld+json">{
      "@context": "https://schema.org",
      "@type": "Article",
  "mainEntityOfPage": {"@type":"WebPage","@id":"https://mariolodehf.github.io/blog{{ page.url }}"},
      "headline": {{ ogTitle | dump }},
      {% if cover %}"image": ["https://mariolodehf.github.io{{ cover }}"],{% endif %}
      "datePublished": "{{ page.date | date('%Y-%m-%d') }}",
      "dateModified": "{{ page.date | date('%Y-%m-%d') }}",
      "author": {"@type":"Person","name":"Mario De Hoyos F"},
      "publisher": {"@type":"Person","name":"Mario De Hoyos F"},
      "description": {{ ogDesc | dump }}
    }</script>
  {% endif %}
</head>
