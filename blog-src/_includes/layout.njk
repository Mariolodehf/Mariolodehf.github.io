<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{% if title %}{{ title }} | Blog | Mario De Hoyos F{% else %}Blog | Mario De Hoyos F{% endif %}</title>
  <meta name="description" content="{% if summary %}{{ summary | safe }}{% else %}Articles and experiences by Mario De Hoyos in telecommunications and cybersecurity.{% endif %}" />
  <link rel="canonical" href="https://mariolodehf.github.io/blog{{ page.url }}" />
  <meta name="color-scheme" content="dark light" />
  <link rel="stylesheet" href="/css/styles.css" />
  <script>
    (function(){
      try {
        const stored = localStorage.getItem('theme');
        const preferred = stored || (window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark');
        document.documentElement.setAttribute('data-theme', preferred);
      } catch(e) {}
    })();
  </script>
  {# Open Graph & JSON-LD solo para posts con front matter #}
  {% if '/posts/' in page.filePathStem %}
    {% set ogTitle = title + ' | Blog | Mario De Hoyos F' %}
    {% set ogDesc = summary or site.description %}
    {% if cover %}<meta property="og:image" content="https://mariolodehf.github.io{{ cover }}" />{% endif %}
    <meta property="og:type" content="article" />
    <meta property="og:title" content="{{ ogTitle }}" />
    <meta property="og:description" content="{{ ogDesc }}" />
  <meta property="og:url" content="https://mariolodehf.github.io/blog{{ page.url }}" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{{ ogTitle }}" />
    <meta name="twitter:description" content="{{ ogDesc }}" />
    {% if cover %}<meta name="twitter:image" content="https://mariolodehf.github.io{{ cover }}" />{% endif %}
    <script type="application/ld+json">{
      "@context": "https://schema.org",
      "@type": "Article",
  "mainEntityOfPage": {"@type":"WebPage","@id":"https://mariolodehf.github.io/blog{{ page.url }}"},
      "headline": {{ ogTitle | dump }},
      {% if cover %}"image": ["https://mariolodehf.github.io{{ cover }}"],{% endif %}
      "datePublished": "{{ page.date | date('%Y-%m-%d') }}",
      "dateModified": "{{ page.date | date('%Y-%m-%d') }}",
      "author": {"@type":"Person","name":"Mario De Hoyos F"},
      "publisher": {"@type":"Person","name":"Mario De Hoyos F"},
      "description": {{ ogDesc | dump }}
    }</script>
  {% endif %}
</head>
<body class="blog-body">
  <header class="site-header">
    <nav class="nav" aria-label="Principal">
      <a class="logo" href="/">Mario De Hoyos<span>.</span></a>
      <div class="nav__actions">
        <button id="theme-toggle" class="btn-theme" type="button"><span class="theme-icon" aria-hidden="true">ðŸŒ™</span></button>
        <button class="nav__toggle" aria-expanded="false" aria-controls="nav-menu" aria-label="Open navigation menu" type="button">
          <span class="nav__toggle-inner" aria-hidden="true"><span class="nav__toggle-bar"></span></span>
        </button>
      </div>
      <ul id="nav-menu" class="nav__menu">
        <li><a href="/">Home</a></li>
        <li><a href="/index.html#proyectos">Projects</a></li>
        <li><a href="/index.html#formacion">Education</a></li>
        <li><a href="/blog/">Blog</a></li>
      </ul>
    </nav>
  </header>
  <div class="nav__overlay" data-nav-overlay hidden></div>
  <main class="main">
    <div class="prose">
  {% if '/posts/' in page.filePathStem %}
        <h1 class="post-title">{{ title }}</h1>
        <p class="post-meta" style="font-size:.8rem; color:var(--color-texto-sec); margin-top:-.6rem;">
          Published on {{ page.date | date('%Y-%m-%d') }} Â· {{ content | readTime }} min read
        </p>
      {% endif %}
      {{ content | safe }}
    </div>
  </main>
  <footer class="site-footer">
    <p>&copy; <span id="year"></span> Mario De Hoyos. All rights reserved.</p>
  </footer>
  <script src="/js/main.js" defer></script>
</body>
</html>
