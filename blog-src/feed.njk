---
permalink: /blog/feed.xml
eleventyExcludeFromCollections: true
---
{% set siteUrl = site.url %}
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title }}</title>
    <link>{{ siteUrl }}/blog/</link>
    <description>{{ site.description }}</description>
    <language>es</language>
    <atom:link href="{{ siteUrl }}/blog/feed.xml" rel="self" type="application/rss+xml" />
    {% for post in collections.post | reverse %}
    <item>
      <title>{{ post.data.title | xmlEscape }}</title>
      <link>{{ siteUrl }}{{ post.url }}</link>
      <guid>{{ siteUrl }}{{ post.url }}</guid>
      <pubDate>{{ post.date | dateRFC822 }}</pubDate>
      {% if post.data.summary %}<description>{{ post.data.summary | xmlEscape }}</description>{% endif %}
    </item>
    {% endfor %}
  </channel>
</rss>